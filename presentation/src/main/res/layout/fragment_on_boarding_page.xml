<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_on_boarding_page_image_view"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:scaleType="fitEnd"
        android:src="@drawable/pyramids"
        app:layout_heightPercent="30%"
        app:layout_marginTopPercent="13%"
        app:layout_widthPercent="82%" />

    <TextView
        android:id="@+id/fragment_on_boarding_page_text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_marginTopPercent="50%" />

    <TextView
        android:id="@+id/fragment_on_boarding_page_text_subtitle"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:typeface="sans"
        app:layout_marginTopPercent="57%"
        app:layout_widthPercent="55%" />
</android.support.percent.PercentRelativeLayout>